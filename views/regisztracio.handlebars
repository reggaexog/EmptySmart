<div class="container">
  <h1>Regisztráció</h1>
  {{#if error}}
    <div class="alert alert-danger" role="alert">
      {{error}}
    </div>
  {{/if}}

  {{error}}
  <form method="post">
    <div class="mb-3">
      <label for="username">Felhasználónév:</label>
      <input
        type="text"
        id="username"
        name="felhasznalonev"
        class="form-control"
        required
      />
    </div>
    <div class="mb-3">
      <label for="password">Jelszó:</label>
      <input
        type="password"
        id="password"
        name="jelszo"
        class="form-control"
        required
      />
    </div>
    <div class="mb-3">
      <label for="password-re">Jelszó ismét:</label>
      <input
        type="password"
        id="password-re"
        name="jelszo_ismet"
        class="form-control"
        required
      />
    </div>
    <button class="btn btn-primary" type="submit">Regisztráció</button>
  </form>
  <div class="registration-link">
    <label>Már regisztráltál, jelentkezz be!
      <a href="/bejelentkezes">Kattints ide</a>!</label>
  </div>
</div>